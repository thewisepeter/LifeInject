{
  "manifest_version": 3,
  "name": "AdFriend",
  "description": "Replaces ads with positive, customizable content like motivational quotes and reminders.",
  "version": "1.0",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Toggle AdFriend"
  },

  "permissions": ["scripting", "storage"],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle"
    }
  ]
}
